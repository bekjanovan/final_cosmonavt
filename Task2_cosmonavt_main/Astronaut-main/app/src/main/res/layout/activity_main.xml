<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/image"
    >

    <ImageView
        android:layout_width="211dp"
        android:layout_height="234dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/yato"></ImageView>

    <TextView
        android:id="@+id/tv_name_of_astronavt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#A7BAC9"
        android:padding="12dp"
        android:text="Yato"
        android:textAlignment="center"
        android:textSize="18sp"></TextView>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onClick1"
        android:text="Send message to Yato"></Button>

    <EditText
        android:id="@+id/et_my_wishes_to_astronavt"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@color/et_main"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Send text:"
        android:text="..."
        android:padding="6dp"
        android:visibility="gone"
        >
    </EditText>

    <Button
        android:id="@+id/btn_send2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Send message to Yato"
        android:visibility="gone"
        android:onClick="onClick2"
        ></Button>

</LinearLayout>

